# Environment Variables for Axiom AI Ecosystem
# Copy this file to .env.local and add your actual API keys

# Gemini AI Configuration
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=axiom-ecosystem.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=axiom-ecosystem
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=axiom-ecosystem.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Admin (Server-side)
FIREBASE_ADMIN_PROJECT_ID=axiom-ecosystem
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email_here
FIREBASE_ADMIN_PRIVATE_KEY=your_service_account_private_key_here

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
